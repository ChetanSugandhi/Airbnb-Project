<% if(successMsg && successMsg.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3">
        <%= successMsg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<% if(deleteMsg && deleteMsg.length) { %>
    <div class="alert alert-warning alert-dismissible fade show col-6 offset-3">
        <%= deleteMsg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<% if(errorMsg && errorMsg.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3">
        <%= errorMsg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>